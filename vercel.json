{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.1",
      "excludeFiles": "{foo/**,bar/config/*.yaml}"
    }
  },
  "routes": [
    { "src": "/(.*)",  "dest": "/api/index.php" }
  ],
  "build": {
    "env": {
      "LD_LIBRARY_PATH": "/path/to/libssl.so.10",
      "PHP_VERSION": "8.0"
    },
    "command": "apt-get update && apt-get install -y libssl-dev"
  }
}
